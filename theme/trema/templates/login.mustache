	require(['theme_trema/particles'], function() {
        console.log(window.particlesJS('page-wrapper', {{{particlesconfig}}}));
	    window.particlesJS('page-wrapper', {{{particlesconfig}}});
	});
{{/particlesconfig}}
{{/js}}
