{{!
    @template theme_boost/login

    Login page template

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Login page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headers keep HTML validators happy</h1>"
        }
    }
}}
{{> theme_boost/head }}

<body {{{ bodyattributes }}}>

<div id="page-wrapper">

    {{{ output.standard_top_of_body_html }}}
    {{> theme_trema/navbar_login }}
    <div id="page" class="mt-0 pt-0 container-fluid {{#output.login_lang_menu}}has-navbar{{/output.login_lang_menu}}">
        <div id="page-content" class="row">
            <div id="region-main-box" class="col-12">
                <section id="region-main" class="col-12">
                    {{{ output.course_content_header }}}
                    {{{ output.main_content }}}
                    {{{ output.course_content_footer }}}
                </section>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-md-center" style="background-color: rgb(255, 255, 255);">

    <div class="col-xl-3 col-md-3 col-sm-3 " id="institutes"  class="form-group" style="text-align: center; ">
        <i  class="fa fa-5x fa-laptop" aria-hidden="true"></i>
        <br>
        <p>Institute Of Computing</p> 
    </div>

    <div class="col-xl-3 col-md-3 col-sm-3 " id="institutes" class="form-group" style="text-align: center;  ">
        <i  class="fa fa-5x fa-book" aria-hidden="true"></i>
        <br>
        <p>Institute Of Teacher Education</p> 
    </div>
    <div class="col-xl-3 col-md-3 col-sm-3 " id="institutes" class="form-group" style="text-align: center; ">
        <i  class="fa fa-5x fa-bank" aria-hidden="true"></i>
        <br>
        <p>Institute Of Leadership  Entrepreneurship<br> And Good Governance</p> 
    </div>
    <div class="col-xl-3 col-md-3 col-sm-3 " id="institutes" class="form-group" style="text-align: center; ">
        <i  class="fa fa-5x fa-flask" aria-hidden="true"></i>
        <br>
        <p>Institute Of Aquatic And Applied <br> Sciences</p> 
    </div>

</div>
{{! 
        Customizing Footer for Login Page
}}
<div class="row justify-content-md-center" style="background-color: rgb(22, 148, 10);">

    <div class="col-xl-8 col-md-8 col-sm-8" id="logo-login" class="row justify-content-md-center">
        {{#logourl}}
            <h1 class="h2 card-header text-center" ><img src="{{logourl}}" class="img-responsive" title="{{sitename}}" alt="{{sitename}}"/></h1>
        {{/logourl}}
        {{^logourl}}
            <h1 class="h2 card-header text-center">{{sitename}}</h1>
        {{/logourl}}
        </div>
</div>



{{{ output.standard_end_of_body_html }}}
</body>
</html>
{{#js}}
require(['theme_boost/loader']);

